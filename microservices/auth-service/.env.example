# Auth Service Environment Template
DEBUG=True
SECRET_KEY=change-this-to-50-characters-secure-key-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,auth-service

DATABASE_URL=postgresql://username:password@host:port/database_name
POSTGRES_HOST=auth-postgres
POSTGRES_DB=auth_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432

JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_LIFETIME=900
JWT_REFRESH_TOKEN_LIFETIME=604800

CORS_ALLOWED_ORIGINS=http://localhost:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000

REDIS_URL=redis://auth-redis:6379/0
CELERY_BROKER_URL=redis://auth-redis:6379/1
CELERY_RESULT_BACKEND=redis://auth-redis:6379/1

SERVICE_NAME=auth-service
API_VERSION=v1
LOG_LEVEL=INFO

# Email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com