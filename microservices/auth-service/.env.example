# Auth Service Environment Template
DEBUG=True
SECRET_KEY=change-this-to-50-characters-secure-key-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,auth-service

# Database
DATABASE_URL=postgresql://username:password@host:port/database_name
POSTGRES_HOST=auth-postgres
POSTGRES_DB=auth_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432
# Prisma Database URL (CRITIQUE)
DATABASE_URL=postgresql://postgres:password@auth-postgres:5432/auth_db

# Frontend URL (pour CORS et liens emails)
FRONTEND_URL=http://localhost:3000

# Django Environment
DJANGO_ENV=development

# JWT (Note: On utilise notre propre système de sessions avec Prisma)
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_LIFETIME=900
JWT_REFRESH_TOKEN_LIFETIME=604800

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000

# Redis & Celery
REDIS_URL=redis://auth-redis:6379/0
CELERY_BROKER_URL=redis://auth-redis:6379/1
CELERY_RESULT_BACKEND=redis://auth-redis:6379/1

# Service Configuration
SERVICE_NAME=auth-service
API_VERSION=v1
LOG_LEVEL=INFO

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Frontend URL (pour les liens dans les emails)
FRONTEND_URL=http://localhost:3000

# MFA Configuration
TOTP_ISSUER=LMS Platform

# Security Settings (Production only)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Sentry (Optional - for error tracking)
# SENTRY_DSN=your-sentry-dsn-here

# OAuth Configuration à ajouter dans .env.example et .env

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback