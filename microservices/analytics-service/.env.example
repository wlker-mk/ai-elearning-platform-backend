# ==============================================
# DJANGO CONFIGURATION
# ==============================================
DEBUG=True
SECRET_KEY=change-this-to-50-characters-secure-key-in-production
DJANGO_SETTINGS_MODULE=config.settings.development
DJANGO_ENV=development

# ==============================================
# SERVER CONFIGURATION
# ==============================================
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
PORT=8011

# ==============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================
DATABASE_URL=postgresql://postgres:rene@postgres:5432/analytics_db
POSTGRES_HOST=postgres
POSTGRES_DB=analytics_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=rene
POSTGRES_PORT=5432

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://redis:6379/0

# ==============================================
# CELERY CONFIGURATION
# ==============================================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==============================================
# EXTERNAL SERVICES
# ==============================================
AUTH_SERVICE_URL=http://auth-service:8001
API_KEY=your-api-key-here

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=INFO

# ==============================================
# SEEDING & INITIALIZATION
# ==============================================
RUN_SEED=false

# ==============================================
# SUPERUSER (optionnel)
# ==============================================
# DJANGO_SUPERUSER_USERNAME=admin
# DJANGO_SUPERUSER_EMAIL=admin@example.com
# DJANGO_SUPERUSER_PASSWORD=secure_password

# ==============================================
# TESTING
# ==============================================
TEST_DATABASE_URL=postgresql://postgres:rene@postgres:5432/test_analytics_db

# ==============================================
# SENTRY (Production uniquement)
# ==============================================
# SENTRY_DSN=your-sentry-dsn-here

# ==============================================
# PRODUCTION SETTINGS
# ==============================================
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True