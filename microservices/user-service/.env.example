# ==========================================
# DJANGO CORE SETTINGS
# ==========================================
DEBUG=True
SECRET_KEY=change-this-to-very-secure-secret-key
DJANGO_SETTINGS_MODULE=config.settings.development
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,user-service,backend

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgresql://postgres:password@postgres:5432/user_db
LOCAL_DATABASE_URL=postgresql://postgres:password@localhost:5432/user_db

POSTGRES_HOST=postgres
POSTGRES_DB=user_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432

# ==========================================
# APPLICATION SPECIFIC
# ==========================================
SERVICE_NAME=user-service
API_VERSION=v1
DEFAULT_FROM_EMAIL=noreply@yourapp.com

# ==========================================
# AUTHENTICATION & JWT
# ==========================================
JWT_SECRET_KEY=change-this-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME=900
JWT_REFRESH_TOKEN_LIFETIME=604800

# ==========================================
# CORS & SECURITY
# ==========================================
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==========================================
# REDIS & CACHE
# ==========================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=django-db

# ==========================================
# EXTERNAL SERVICES
# ==========================================
AUTH_SERVICE_URL=http://auth-service:8001
ANALYTICS_SERVICE_URL=http://analytics-service:8011
NOTIFICATION_SERVICE_URL=http://notification-service:8003
API_GATEWAY_URL=http://api-gateway:8000

# ==========================================
# INTER-SERVICE COMMUNICATION
# ==========================================
SERVICE_API_KEY=change-this-service-api-key
INTERNAL_COMMUNICATION_SECRET=change-this-internal-secret

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO